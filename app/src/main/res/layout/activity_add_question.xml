<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Quiz Question"
            android:textColor="#000000"
            android:textSize="22sp"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginBottom="20dp" />

        <EditText
            android:id="@+id/inputQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter question"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/inputChoiceA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Choice A"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/inputChoiceB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Choice B"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/inputChoiceC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Choice C"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/inputChoiceD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Choice D"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/inputCorrectAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correct Answer (A/B/C/D)"
            android:padding="12dp"
            android:layout_marginBottom="20dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Question"
            android:backgroundTint="@color/primary"
            android:textColor="@android:color/white"
            android:fontFamily="@font/roboto_bold"
            android:padding="12dp"
            android:textSize="18sp" />

    </LinearLayout>
</ScrollView>
