<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        android:background="@color/white"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/title"
            style="@style/TextStyle.H2"
            android:layout_width="335dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:text="Title"/>
        <TextView
            android:id="@+id/desc"
            style="@style/TextStyle.Body"
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:text="Description (Description) Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. "/>

        <ImageView
            android:id="@+id/image1"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/imagesample" />

        <WebView
            android:id="@+id/code1"
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            tools:ignore="WebViewLayout" />

        <TextView
            android:id="@+id/helper1"
            style="@style/TextStyle.Helper"
            android:layout_width="335dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="HelperText for Image"
            android:textColor="@color/deEmphasized" />

        <ImageView
            android:id="@+id/image2"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/imagesample" />
        <WebView
            android:id="@+id/code2"
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            tools:ignore="WebViewLayout" />

        <TextView
            android:id="@+id/helper2"
            style="@style/TextStyle.Helper"
            android:layout_width="335dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="HelperText for Image"
            android:textColor="@color/deEmphasized" />
        <ImageView
            android:id="@+id/image3"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/imagesample" />
        <WebView
            android:id="@+id/code3"
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            tools:ignore="WebViewLayout" />
        <TextView
            android:id="@+id/helper3"
            style="@style/TextStyle.Helper"
            android:layout_width="335dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="HelperText for Image"
            android:textColor="@color/deEmphasized" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>