<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Blue line -->
    <View
        android:id="@+id/top_line"
        android:layout_width="343dp"
        android:layout_height="1dp"
        android:background="@color/secondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Module text -->
    <TextView
        android:id="@+id/module_text"
        style="@style/TextStyle.Helper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="End of Module 1. Introduction to Java"
        android:textColor="@color/deEmphasized"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_line" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/markDone"
        style="@style/TextStyle.Button"
        android:layout_width="116dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_height="35dp"
        android:layout_marginTop="12dp"
        android:text="Mark as done"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:backgroundTint="#E0E0E0"
        app:cornerRadius="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.903"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/module_text" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/takeQuiz"
        style="@style/TextStyle.Small"
        android:layout_width="266dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_height="41dp"
        android:layout_marginTop="72dp"
        android:text="Take Quiz"
        android:textAllCaps="false"
        android:textColor="@color/secondary"
        android:textSize="10sp"
        app:backgroundTint="@color/white"
        app:cornerRadius="2dp"

        app:icon="@drawable/take_quiz"
        app:iconGravity="textStart"
        app:iconPadding="4dp"
        app:iconTint="@color/secondary"
        app:strokeColor="@color/secondary"
        app:strokeWidth="1dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/module_text" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/takeCodingExercises"
        style="@style/TextStyle.Small"
        android:layout_width="266dp"
        android:layout_height="41dp"
        android:layout_marginTop="12dp"
        android:clickable="true"
        android:focusable="true"
        android:text="Take Coding Exercises"
        android:textAllCaps="false"
        android:textColor="@color/secondary"
        android:textSize="10sp"
        app:backgroundTint="@color/white"

        app:cornerRadius="2dp"
        app:icon="@drawable/take_quiz"
        app:iconGravity="textStart"
        app:iconPadding="4dp"
        app:iconTint="@color/secondary"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/takeQuiz"
        app:strokeColor="@color/secondary"
        app:strokeWidth="1dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
