<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header with Close Button -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Privacy Policy"
                android:textSize="22sp"
                android:fontFamily="@font/roboto_bold"
                android:layout_centerVertical="true"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/close_button"
                android:background="@drawable/close"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:contentDescription="Close"
                tools:ignore="HardcodedText" />

        </RelativeLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="16dp" />

        <!-- ScrollView for content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="400dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Last Updated: December 2025"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="16dp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Acceptance of Terms"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="#03162A"
                    android:layout_marginTop="8dp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="By accessing and using CodeX: Java, you accept and agree to be bound by the terms and provision of this agreement. If you do not agree to these terms, please do not use our application."
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. Use License"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="#03162A"
                    android:layout_marginTop="8dp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Permission is granted to temporarily use CodeX: Java for personal, non-commercial educational purposes only. This is the grant of a license, not a transfer of title, and under this license you may not:\n\n• Modify or copy the materials\n• Use the materials for any commercial purpose\n• Attempt to decompile or reverse engineer any software\n• Remove any copyright or proprietary notations"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3. User Account"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="#03162A"
                    android:layout_marginTop="8dp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="You are responsible for maintaining the confidentiality of your account and password. You agree to accept responsibility for all activities that occur under your account. You must notify us immediately of any unauthorized use of your account."
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4. Acceptable Use"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="#03162A"
                    android:layout_marginTop="8dp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="You agree not to use CodeX: Java to:\n\n• Violate any applicable laws or regulations\n• Infringe on intellectual property rights\n• Distribute malware or harmful code\n• Harass or harm other users\n• Attempt to gain unauthorized access to our systems"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5. Content Ownership"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="#03162A"
                    android:layout_marginTop="8dp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="All content provided through CodeX: Java, including lessons, exercises, and assessments, are owned by us and are protected by copyright laws. Your learning progress and submissions remain your intellectual property."
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="6. Termination"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="#03162A"
                    android:layout_marginTop="8dp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We may terminate or suspend your account immediately, without prior notice, for any breach of these Terms. Upon termination, your right to use the application will immediately cease."
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="7. Changes to Terms"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="#03162A"
                    android:layout_marginTop="8dp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We reserve the right to modify these terms at any time. We will notify users of any material changes. Your continued use of CodeX: Java after changes constitutes acceptance of the modified terms."
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    tools:ignore="HardcodedText" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.cardview.widget.CardView>