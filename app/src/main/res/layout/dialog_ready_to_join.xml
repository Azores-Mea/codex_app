<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp"

    android:layout_gravity="center"
    android:background="@drawable/dialogue_background"
    android:layout_width="370dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dialog_title"
        android:text="Ready to Join?"
        style="@style/TextStyle.H1"
        android:layout_marginTop="30dp"
        android:textColor="#002366"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/dialog_message"
        style="@style/TextStyle.Body"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Double-check your details before signing up. Do you want to continue with registration?"
        android:textColor="#09417D" />

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/no_btn"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:alpha=".7"
            android:text="No"
            android:textAllCaps="false"
            android:textColor="#4398F2"
            style="@style/TextStyle.Button"
            android:translationZ="12dp"


            app:backgroundTint="@color/white"
            app:cornerRadius="10dp"
            app:strokeColor="#4398F2"
            app:strokeWidth="2dp"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

        <View
            android:id="@+id/space"
            android:layout_width="40dp"
            android:layout_height="80dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/yes_btn"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Yes"
            android:textAllCaps="false"
            android:textColor="@color/white"
            style="@style/TextStyle.Button"

            android:translationZ="12dp"
            app:backgroundTint="@color/black"
            app:cornerRadius="10dp"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

    </LinearLayout>

</LinearLayout>
