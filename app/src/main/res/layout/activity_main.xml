<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/primary">

    <!--Logo-->
    <ImageView
        android:id="@+id/codexstart"
        android:layout_width="314dp"
        android:layout_height="277dp"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499"
        app:srcCompat="@drawable/codexlogo" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/wcform"
        android:layout_width="407dp"
        android:layout_height="330dp"
        android:background="@drawable/formround"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/wc"
            style="@style/TextStyle.H1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="17dp"
            android:text="Welcome"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView11"
            style="@style/TextStyle.H2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="1dp"
            android:text="Let's get you started!"
            android:textColor="#4398F2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/wc"
            tools:ignore="HardcodedText" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/createAccountBtn"
            style="@style/TextStyle.Button"
            android:layout_width="318dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="24dp"
            android:drawableLeft="@drawable/avatar"
            android:drawablePadding="8dp"
            android:paddingRight="50dp"
            android:text="Create Account"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:translationZ="12dp"
            app:backgroundTint="#062C54"
            app:cornerRadius="10dp"
            app:iconGravity="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/signInBtn"
            style="@style/TextStyle.Button"
            android:layout_width="318dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/email"
            android:paddingRight="60dp"
            android:text="Sign In"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:translationZ="12dp"
            app:backgroundTint="#062C54"
            app:cornerRadius="10dp"
            app:iconGravity="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/createAccountBtn"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

        <TextView
            android:id="@+id/policyText"
            android:layout_width="317dp"
            android:layout_height="35dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="By continuing you agree to our Terms and Conditions and Privacy Policy"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="HardcodedText" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--Registration with ScrollView-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/registration"
        android:layout_width="411dp"
        android:layout_height="807dp"
        android:background="@drawable/formround"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.988">

        <ImageButton
            android:id="@+id/close_registration"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/close"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/registration_title"
            style="@style/TextStyle.H2"
            android:layout_width="285dp"
            android:layout_height="34dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Create your Account"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

        <TextView
            android:id="@+id/textView2"
            style="@style/TextStyle.Helper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Note: * indicates a required field."
            android:textColor="@color/deEmphasized"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registration_title" />

        <!-- ScrollView for form fields -->
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:fillViewport="true"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp">

                <!--First Name-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/firstNameLayout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:hint="First Name"
                    app:boxStrokeWidthFocused="2dp"
                    app:endIconDrawable="@drawable/close"
                    app:endIconMode="clear_text"
                    tools:ignore="HardcodedText">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/firsNameInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="TextContrastCheck" />
                </com.google.android.material.textfield.TextInputLayout>

                <!--Last Name-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/lastNameLayout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:hint="Last Name"
                    app:boxStrokeWidthFocused="2dp"
                    app:endIconDrawable="@drawable/close"
                    app:endIconMode="clear_text"
                    tools:ignore="HardcodedText">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/lastNameInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        tools:ignore="TextContrastCheck" />
                </com.google.android.material.textfield.TextInputLayout>

                <!--Email-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/emailLayout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:hint="Email Address *"
                    app:boxStrokeWidthFocused="2dp"
                    app:endIconDrawable="@drawable/close"
                    app:endIconMode="clear_text"
                    tools:ignore="HardcodedText">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/emailInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        tools:ignore="TextContrastCheck" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/checkEmail_reg"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="-4dp"
                    android:layout_marginBottom="4dp"
                    android:text=""
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="12sp" />

                <!--Password-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/passwordLayout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:hint="Password *"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeWidthFocused="2dp"
                    app:endIconMode="password_toggle"
                    app:endIconTint="@color/gray"
                    app:shapeAppearanceOverlay="@style/RoundedTextInput"
                    tools:ignore="HardcodedText">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/passwordInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:paddingEnd="72dp"
                        tools:ignore="RtlSymmetry,TextContrastCheck" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/checkPass_reg"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="-4dp"
                    android:layout_marginBottom="4dp"
                    android:text=""
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="12sp" />

                <!--Confirm Password-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/confirmPasswordLayout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:hint="Confirm Password *"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeWidthFocused="2dp"
                    app:endIconMode="password_toggle"
                    app:endIconTint="@color/gray"
                    app:shapeAppearanceOverlay="@style/RoundedTextInput"
                    tools:ignore="HardcodedText">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/confirmPasswordInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:paddingEnd="72dp"
                        tools:ignore="RtlSymmetry,TextContrastCheck" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/checkConfirmPass_reg"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="-4dp"
                    android:layout_marginBottom="16dp"
                    android:text=""
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="12sp" />

                <!-- Educational Background Dropdown -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/educationalBackgroundLayout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:hint="Educational Background *"
                    app:boxStrokeWidthFocused="2dp"
                    tools:ignore="HardcodedText">

                    <AutoCompleteTextView
                        android:id="@+id/educationalBackgroundInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:textColor="@color/black"
                        tools:ignore="LabelFor,TextContrastCheck" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Field of Study -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/fieldOfStudyLayout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:hint="Field of Study (optional)"
                    app:boxStrokeWidthFocused="2dp"
                    app:endIconDrawable="@drawable/close"
                    app:endIconMode="clear_text"
                    tools:ignore="HardcodedText">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/fieldOfStudyInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        tools:ignore="TextContrastCheck" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/orRegisterText"
                    style="@style/TextStyle.H2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:paddingStart="40dp"
                    android:text="Or register with:"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/appleAccount"
                    style="@style/TextStyle.Button"
                    android:layout_width="258dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="24dp"
                    android:drawableLeft="@drawable/a_icon"
                    android:drawablePadding="8dp"
                    android:paddingRight="50dp"
                    android:text="Apple Account"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:translationZ="12dp"
                    app:backgroundTint="@color/primary"
                    app:cornerRadius="10dp"
                    app:iconGravity="textStart"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.494"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView11"
                    tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/gmailAccount"
                    style="@style/TextStyle.Button"
                    android:layout_width="258dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="24dp"
                    android:drawableLeft="@drawable/g_icon"
                    android:drawablePadding="8dp"
                    android:paddingRight="50dp"
                    android:text="Google"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:translationZ="12dp"
                    app:backgroundTint="@color/primary"
                    app:cornerRadius="10dp"
                    app:iconGravity="textStart"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.494"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView11"
                    tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/confirmBtn"
                    android:layout_width="218dp"
                    android:layout_height="61dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="28dp"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Confirm"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:translationZ="12dp"
                    app:backgroundTint="#03162A"
                    app:cornerRadius="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

            </LinearLayout>
        </ScrollView>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--Login-->
    <LinearLayout
        android:id="@+id/login"
        android:layout_width="411dp"
        android:layout_height="807dp"
        android:background="@drawable/formround"
        android:visibility="gone"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:clickable="true">

        <ImageButton
            android:id="@+id/close_login"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/close"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/login_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="Welcome Back!"
            android:textSize="35sp"
            tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Let's pick up where you left off."
            android:textColor="#09417D"
            android:alpha=".9"
            android:textSize="17sp"
            android:layout_marginTop="30dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/login_email"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:layout_width="330dp"
            android:layout_height="100dp"
            android:layout_marginBottom="16dp"
            android:hint="Email Address"
            app:boxStrokeColor="#594AE2"
            app:boxStrokeWidthFocused="2dp"
            app:endIconMode="clear_text"
            app:endIconDrawable="@drawable/close"
            tools:ignore="HardcodedText">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/login_email_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:id="@+id/checkEmail_log"
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/login_pass"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_gravity="center"
            android:layout_width="330dp"
            android:layout_height="140dp"
            android:hint="Password"
            app:boxStrokeColor="#594AE2"
            android:layout_marginTop="-10dp"
            app:boxStrokeWidthFocused="2dp"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/gray"
            tools:ignore="HardcodedText">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/login_pass_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:id="@+id/checkPass_log"
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/appleAccountLogin"
            style="@style/TextStyle.Button"
            android:layout_width="258dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="24dp"
            android:drawableLeft="@drawable/a_icon"
            android:drawablePadding="8dp"
            android:paddingRight="50dp"
            android:text="Apple Account"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:translationZ="12dp"
            app:backgroundTint="@color/primary"
            app:cornerRadius="10dp"
            app:iconGravity="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/gmailAccountLogin"
            style="@style/TextStyle.Button"
            android:layout_width="258dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="24dp"
            android:drawableLeft="@drawable/g_icon"
            android:drawablePadding="8dp"
            android:paddingRight="50dp"
            android:text="Google"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:translationZ="12dp"
            app:backgroundTint="@color/primary"
            app:cornerRadius="10dp"
            app:iconGravity="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

        <LinearLayout
            android:layout_width="310dp"
            android:layout_gravity="center"
            android:layout_height="189dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/login_cancel"
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:alpha=".7"
                android:fontFamily="@font/roboto_medium"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="#4398F2"
                android:textSize="15sp"
                android:textStyle="bold"
                android:translationZ="12dp"
                app:backgroundTint="@color/white"
                app:cornerRadius="12dp"
                app:strokeColor="#4398F2"
                app:strokeWidth="2dp"
                tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

            <View
                android:layout_width="20dp"
                android:layout_height="230dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/login_confirm"
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_medium"
                android:text="Confirm"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                android:enabled="false"
                android:alpha="0.5"
                android:translationZ="12dp"
                app:backgroundTint="#E0E0E0"
                app:cornerRadius="12dp"
                tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/completeInfo"
        android:layout_width="416dp"
        android:layout_height="501dp"
        android:background="@drawable/formround"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            style="@style/TextStyle.H2"
            android:layout_width="285dp"
            android:layout_height="34dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Complete your profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

        <TextView
            android:layout_gravity="center"
            style="@style/TextStyle.Helper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Note: * indicates a required field."
            android:textColor="@color/deEmphasized"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registration_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <!-- Educational Background Dropdown -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/educationalBackgroundLayoutComplete"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:hint="Educational Background *"
                app:boxStrokeWidthFocused="2dp"
                tools:ignore="HardcodedText">

                <AutoCompleteTextView
                    android:id="@+id/educationalBackgroundInputComplete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:textColor="@color/black"
                    tools:ignore="LabelFor,TextContrastCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Field of Study -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fieldOfStudyLayoutComplete"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:hint="Field of Study (optional)"
                app:boxStrokeWidthFocused="2dp"
                app:endIconDrawable="@drawable/close"
                app:endIconMode="clear_text"
                tools:ignore="HardcodedText">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fieldOfStudyInputComplete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    tools:ignore="TextContrastCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                style="@style/TextStyle.H2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="40dp"
                android:text="Or register with:"
                android:textColor="@color/black"
                tools:ignore="HardcodedText" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/confirmBtnComplete"
                android:layout_width="218dp"
                android:layout_height="61dp"
                android:layout_gravity="center"
                android:layout_marginBottom="28dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Confirm"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:translationZ="12dp"
                app:backgroundTint="#03162A"
                app:cornerRadius="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>