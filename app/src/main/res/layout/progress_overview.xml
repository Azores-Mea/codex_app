<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lessonHistory"
    android:layout_width="317dp"
    android:layout_height="104dp"
    android:layout_gravity="center"
    android:paddingStart="16dp"
    app:cardBackgroundColor="#D9D9D9"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="314dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="TODO"
            android:paddingStart="10dp"
            app:srcCompat="@drawable/current_sample" />

        <LinearLayout
            android:layout_width="226dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp" />

            <TextView
                android:id="@+id/lesson_title"
                android:layout_width="194dp"
                android:layout_height="20dp"
                android:fontFamily="@font/roboto_bold"
                android:lineSpacingMultiplier="1.3"
                android:text="Object-Oriented Programming Fundamentals"
                android:textColor="#000405"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:ignore="NotSibling,UnknownId" />

            <TextView
                android:id="@+id/lesson_desc"
                android:layout_width="194dp"
                android:layout_height="32dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Learn about classes, objects, inheritance, and polymorphism in Java"
                android:textColor="#4A4A68"
                android:textSize="10sp"
                android:textStyle="normal"
                tools:ignore="NotSibling,SmallSp,UnknownId" />

            <TextView
                android:id="@+id/lesson_progress"
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:fontFamily="@font/roboto_medium"
                android:text="2/12 lessons"
                android:textColor="#4A4A68"
                android:textSize="10sp"
                android:textStyle="normal"
                tools:ignore="NotSibling,SmallSp,UnknownId" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:progressTint="#03162A"
                android:progressBackgroundTint="#B0BEC5"
                tools:ignore="NotSibling,UnknownId" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
