<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/lessonId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="LessonId" />

        <EditText
            android:id="@+id/inputTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Exercise Title" />

        <EditText
            android:id="@+id/inputDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Exercise Description" />

        <EditText
            android:id="@+id/inputCode"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:hint="Enter code here"
            android:inputType="textMultiLine|textNoSuggestions"
            android:gravity="top|start"
            android:scrollbars="vertical"
            android:background="#F2F2F2"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/inputExpectedOutput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Expected Output"
            android:inputType="textMultiLine|textNoSuggestions" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveExercise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Exercise"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
