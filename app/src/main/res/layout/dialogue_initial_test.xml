<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="30dp"
    android:layout_gravity="center"
    android:background="@drawable/dialogue_background"
    android:layout_width="370dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_gravity="center"
        android:id="@+id/dialog_title"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Java Proficiency Test complete!"
        android:textColor="#002366"
        style="@style/TextStyle.H1"
        android:textStyle="bold" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/classification"
        android:layout_width="200dp"
        android:layout_height="86dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        app:cardCornerRadius="10dp"
        app:strokeWidth="2dp"
        app:strokeColor="@color/tertiary">

        <LinearLayout
            android:id="@+id/classBg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bgText"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/className"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beginner"
                android:textColor="@color/tertiary"
                style="@style/TextStyle.H2" />

            <TextView
                android:id="@+id/percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textColor="@color/tertiary"
                style="@style/TextStyle.H2" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Score: 0/20"
        android:textColor="#0E0E2C"
        style="@style/TextStyle.Subtitle"
        android:gravity="center"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            style="@style/TextStyle.Subtitle"
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="Time Completed:" />

        <TextView
            android:id="@+id/timeCompleted"
            style="@style/TextStyle.Small"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="00 mins 00 secs"
            android:textColor="#06651A"
            android:textSize="16sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/weakAreasLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Weak Areas:"
        android:textColor="#000000"
        style="@style/TextStyle.Subtitle"
        android:layout_marginTop="15dp"
        android:visibility="gone"/>

    <ScrollView
        android:id="@+id/weakAreasScroll"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:visibility="gone"
        android:scrollbars="vertical"
        android:fadeScrollbars="false">

        <TextView
            android:id="@+id/weakAreasText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Introduction to Java\nVariables and Data Types\nType Casting and Operators\nStrings, Math, and Booleans"
            android:textColor="#E3AF64"
            style="@style/TextStyle.Small"
            android:lineSpacingExtra="4dp"/>

    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/yes_btn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_medium"
            android:text="Continue to homepage"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:translationZ="5dp"
            app:backgroundTint="@color/black"
            app:cornerRadius="8dp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</LinearLayout>